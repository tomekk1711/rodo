<div class="hero-unit">
<h1>Udzielone zgody</h1>
<%= link_to "Wyszukiwanie", new_search_path %>



<hr>
<br>
<br>

<ul class="nav nav-pills">
  <li role="presentation"  class="active"><a href="/dostep">Powrót</a></li>
</ul><p align="right"> <%= link_to("Dodaj nowa zgodę", {:action => 'nowa'}, :class => 'btn btn-lg btn-warning') %> </p>
<br>
<table class="table table-striped">
	<tr class="info">
		<th>Pozycja</th>
		<th>Imię</th>
		<th>Nazwisko</th>
		<th>Miejscowość</th>
		<th>Nr domu</th>
		<th>Nr mieszkania</th>
		<th>Potwierdzenie</th>
		<th>Uwagi</th>
		<th>Akcja</th>
	</tr>
	<% @udzielone.each do |zgoda| %>
	<tr>
		<th><%= zgoda.pozycja %></th>
		<th><%= zgoda.imie %></th>
		<th><%= zgoda.nazwisko %></th>
		<th><%= zgoda.miejscowosc %></th>
		<th><%= zgoda.nrdomu %></th>
		<th><%= zgoda.nrmieszkania %></th>
		<th><%= zgoda.potwierdzenie ? 'Tak' : 'Nie' %></th>
		<th><%= zgoda.uwagi %></th>
		<th>
			<%= link_to("Pokaż", {:action=>'pokaz', :id=>zgoda.id}, :class => 'btn btn-xs btn-success') %>
			<%= link_to("Edycja", {:action=>'edycja', :id=>zgoda.id}, :class => 'btn btn-xs btn-primary') %>
			<%= link_to("Usuń", {:action=>'usun', :id=>zgoda.id}, :class => 'btn btn-xs btn-danger') %>
		</th>
	</tr>
<% end %>
</table>
<hr>
<br>
<p>Ilość przyjętych informacji: <%= @udzielone.size %></p>
<table>
<br>

</div>
